<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <TextView
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/txt_earthQuakeMagnitude"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/round_bg"
        tools:text="7.2" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="2"
        android:orientation="vertical">

    <TextView
        android:textAllCaps="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textColorEarthquakeDetails"
        android:id="@+id/txt_earthQuakeLocationOffset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        tools:text="30Km North West Of" />

    <TextView
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/textColorEarthquakeLocation"
        android:id="@+id/txt_earthQuakePrimaryLocation"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        tools:text="San Francisco" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
    <TextView
        android:id="@+id/txt_earthQuakeDate"
        tools:text="Feb 2, 2016"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:textColor="@color/textColorEarthquakeDetails"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_earthQuakeTime"
        tools:text="3:00PM"
        android:gravity="center"
        android:layout_gravity="end"
        android:textColor="@color/textColorEarthquakeDetails"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>